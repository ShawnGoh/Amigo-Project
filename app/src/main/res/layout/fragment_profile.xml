<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/black"
            app:expandedTitleTextAppearance="@color/black"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/howmuchyanqicanayanqiqi"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="none"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profilenametextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="Name"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/profilepic"
                    app:layout_constraintStart_toStartOf="@+id/profilepic"
                    app:layout_constraintTop_toBottomOf="@+id/profilepic" />

                <TextView
                    android:id="@+id/profileaboutmetextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="About Me"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/profilenametextview"
                    app:layout_constraintStart_toStartOf="@+id/profilenametextview"
                    app:layout_constraintTop_toBottomOf="@+id/profilenametextview" />

                <TextView
                    android:id="@+id/profilebiotextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="Bio"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/profileaboutmetextview"
                    app:layout_constraintStart_toStartOf="@+id/profileaboutmetextview"
                    app:layout_constraintTop_toBottomOf="@+id/profileaboutmetextview" />


                <TextView
                    android:id="@+id/profilelookingfortextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="Looking For"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/profilebiotextview"
                    app:layout_constraintStart_toStartOf="@+id/profilebiotextview"
                    app:layout_constraintTop_toBottomOf="@+id/profilebiotextview" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profileemailtextview">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/profileskillchipsgroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="24dp">

                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>

                <TextView
                    android:id="@+id/profileemailtextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Email"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    app:layout_constraintEnd_toEndOf="@+id/profilecurrentprojectstextview"
                    app:layout_constraintStart_toStartOf="@+id/profilecurrentprojectstextview"
                    app:layout_constraintTop_toBottomOf="@+id/profileuserid" />

                <TextView
                    android:id="@+id/profileuserid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="UID"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    app:layout_constraintEnd_toEndOf="@+id/profilecurrentprojectstextview"
                    app:layout_constraintStart_toStartOf="@+id/profilecurrentprojectstextview"
                    app:layout_constraintTop_toBottomOf="@+id/profilecurrentprojectstextview" />

                <TextView
                    android:id="@+id/profilecurrentprojectstextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:text="My Current Projects"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/profileuserid"
                    app:layout_constraintStart_toStartOf="@+id/profileuserid"
                    app:layout_constraintTop_toBottomOf="@+id/profileuserid" />

                <Button
                    android:id="@+id/backtohomepagebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Back to Home"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    app:layout_constraintEnd_toEndOf="@+id/profileemailtextview"
                    app:layout_constraintHorizontal_bias="0.511"
                    app:layout_constraintStart_toStartOf="@+id/profileemailtextview"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_margin="9dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/amigologosmallest"
                        android:scaleType="centerInside"
                        android:src="@drawable/amigologosmallest" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insert Project Description Here"
                            android:textSize="11sp"
                            android:layout_margin="9dp"
                            android:textColor="#000000"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="9dp"
                            android:text="Insert Project Name Here"
                            android:textColor="#000000"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_margin="9dp"
                        android:adjustViewBounds="true"


                        android:scaleType="centerInside"
                        android:src="@drawable/amigologosmallest" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insert Project Name Here"
                            android:textSize="14sp"
                            android:layout_margin="9dp"
                            android:textColor="#000000"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insert Project Description Here"
                            android:textSize="11sp"
                            android:layout_margin="9dp"
                            android:textColor="#000000" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_margin="9dp"
                        android:adjustViewBounds="true"


                        android:scaleType="centerInside"
                        android:src="@drawable/amigologosmallest" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insert Project Name Here"
                            android:textSize="14sp"
                            android:layout_margin="9dp"
                            android:textColor="#000000" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Insert Project Description Here"
                            android:textSize="11sp"
                            android:layout_margin="9dp"
                            android:textColor="#000000" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>